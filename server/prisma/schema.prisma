generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Image {
  id       String     @id
  url      String     @unique
  Category Category[]
  Item     Item[]

  @@map("images")
}

model Category {
  id       Int    @id @default(autoincrement())
  name     String @unique
  image_id String
  image    Image  @relation(fields: [image_id], references: [id])
  Item     Item[]

  @@map("categories")
}

model Item {
  id          Int      @id @default(autoincrement())
  name        String   @unique
  price       Float
  category_id Int
  category    Category @relation(fields: [category_id], references: [id])
  image_id    String
  image       Image    @relation(fields: [image_id], references: [id])

  @@map("items")
}
